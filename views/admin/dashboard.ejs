<%- include('../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <%- include('../partials/sidebar') %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
        <div class="btn-toolbar mb-2 mb-md 0">
          <div class="btn-group me-2">
            <a href="/admin/add" class="btn btn-sm btn-outline-secondary">+ New User</a>
          </div>
        </div>
      </div>



      <div class="table-responsive">

        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">User Name</th>
              <th scope="col">Email</th>
              <th scope="col" class="text-end">Action</th>
            </tr>
          </thead>

          <tbody>
            <% users.forEach(user => { %>
            <tr class="align-middle">
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>

                <div class="d-flex flex-row justify-content-end gap-2">

                  <a href="/admin/view/<%= user._id %>" type="button" class="btn btn-primary btn-small">
                    <i class="bi bi-eye"></i>
                  </a>

                  <a href="/admin/edit/<%= user._id %>" type="button" class="btn btn-warning btn-small">
                    <i class="bi bi-pencil"></i>
                  </a>

                  <a href="/admin/block/<%= user._id %>/<%= user.blocked %>" type="button" class="btn <% if (user.blocked) { %>
                   btn-danger
                  <% } else { %> 
                    btn-primary
                  <% } %>
                  btn-small">
                    <i class="bi bi-person-x"></i>
                  </a>

                </div>

              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <% if (users.length > 0) { %>
      <nav aria-label="Dashboard Pagination">
        <ul class="pagination justify-content-center mt-5">
          <% if (current == 1) { %>
          <li class="page-item disabled"><a href="#" class="page-link">First</a></li>
          <% } else {%>
          <li class="page-item"><a href="/admin/dashboard/?page=1" class="page-link">First</a></li>
          <% } %>
          <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
          <% if (i !== 1) { %>
          <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
          <% } %>
          <% for(; i <= (Number(current) + 4) && i <= pages; i++ ) { %>
          <% if (i == current) { %>
          <li class="page-item disabled"><a href="#" class="page-link"><%= i %></a></li>
          <% } else { %>
          <li class="page-item"><a href="/admin/dashboard/?page=<%= i %>" class="page-link"><%= i %></a></li>
          <% } %>
          <% if (i === Number(current) + 4 && i < pages) { %>
          <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
          <% } %>
          <% } %>
          <% if (current == pages) { %>
          <li class="page-item disabled"><a href="#" class="page-link">Last</a></li>
          <% } else {%>
          <li class="page-item"><a href="/admin/dashboard/?page=<%= pages %>" class="page-link">Last</a></li>
          <% } %>
        </ul>
      </nav>
      <% } %>

    </main>

  </div>
</div>